<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iot.quickhpu.fragment.ClassScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pre_week"
                android:background="@color/google_yellow"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="#Fff"
                android:text=" &lt;" />

            <TextView
                android:id="@+id/tv_current_week"
                android:layout_width="0dp"
                android:background="@color/google_red"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:text=" 当前周:  " />

            <TextView
                android:id="@+id/tv_next_week"
                android:layout_width="0dp"
                android:background="@color/google_blue"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="30sp"
                android:text=" &gt; " />
        </LinearLayout>

        <com.zhuangfei.timetable.core.TimetableView
            android:id="@+id/id_timetableView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </com.zhuangfei.timetable.core.TimetableView>
    </LinearLayout>

</FrameLayout>
